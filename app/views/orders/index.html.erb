<h1>My Cart</h1>

  <ul style="padding: 10px 20px; box-shadow: 0 0 5px 0.8px rgba(0, 0, 0, 0.3); margin-bottom: 20px">
    <% if @user.orders.length == 0 %>
      <p class="show-text" style="margin-left: 10px">Your shopping cart is empty.</p>
    <% else %>
      <% @user.orders.each do |order| %>
        <li style="list-style: none; align-items: center; padding: 10px 0">
          <p class="show-text" style="margin-bottom: 0"><%= order.item.name %></p>
          <p class="show-text" style="margin-left: 16px; margin-bottom: 5px"><%= order.item.price %></p>
          <%= link_to order_path(order), method: :delete, data: {confirm: "Are you sure?"} do %>
            <i class="fas fa-trash-alt" style="margin-right: 5px; font-size: 16px; color: black"></i>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>


<p>Total:</p>
