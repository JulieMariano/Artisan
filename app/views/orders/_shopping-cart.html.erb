<h2>SHOPPING CART</h2>

<% if current_user.cart_size.zero? %>
  <p style="margin-left: 10px">Your shopping cart is empty</p>

<% else %>
  <ul class="orders-list">
    <%= render "orders_items/orders-items-list" %>
  </ul>

  <div class="order-checkout">
    <table>
      <tr>
        <td>Subtotal (<%= @order.num_items_string %>)</td>
        <td style="width: 20px"></td>
        <td class="order-checkout-price"><%= humanized_money_with_symbol(@order.items_subtotal) %></td>
      </tr>
    </table>

    <%= link_to buy_all_orders_path, class:"btn btn-ghost", method: :post, remote: true do %>
      Checkout
    <% end %>
  </div>
<% end %>
