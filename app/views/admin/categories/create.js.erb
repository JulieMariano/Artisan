// Close the Modal
document.querySelector('#ModalCategoryNew button').click();

// Empty the Modal input field
document.getElementById('category_name_new').value = "";

// Remove the Modal's background shadow
document.querySelector('body').classList.remove('modal-open');
document.querySelector('.modal-backdrop').remove();

// Use jQuery to append the new Category row in the Categories table
$('tbody').append("<%= j render "admin/categories/category", category: @category %>");
