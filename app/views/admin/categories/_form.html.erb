<div class="modal fade" id="ModalCategory<%= category.id || "New" %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= category.id ? "Edit" : "New" %> Category</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">
        <%= simple_form_for([:admin, category], remote: true) do |f| %>
          <%= f.input :name, input_html: { id: "category_name_#{category.id || "new"}" }, placeholder: "Category" %>
          <%= f.submit "#{category.id ? "Update" : "Create"}", class: "btn btn-ghost" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
