<div class="admin-container">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Categories</th>
        <th>Num Items</th>
        <th>Created</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |cat| %>
        <tr>
          <td>
            <%= link_to "Delete", data: { toggle: "modal", target: "#ModalDeleteCategory#{cat.id}" }, class: "btn-delete",
                style: "margin-right: 5px; font-size: 18px" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>

            <%= link_to "Edit", data: { toggle: "modal", target: "#ModalEditCategory#{cat.id}" }, class: "btn-edit",
                style: "margin-right: 5px; font-size: 18px" do %>
              <i class="fas fa-edit"></i>
            <% end %>

            <%= cat.name %>
          </td>

          <td>
            <%= link_to admin_category_path(cat), style: "color: black" do %>
              <%= num_items = cat.items.size  %>
              <%= num_items == 1 ? "item" : "items" %>
            <% end %>
          </td>

          <td><%= cat.created_at.strftime("%e/%m/%Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Category',  new_admin_category_path, class: "btn btn-ghost", style: "margin-left: 10px" %>
</div>
