// Close the Modal
document.querySelector('#ModalItemNew button').click();

// Remove the Modal's background shadow
document.querySelector('body').classList.remove('modal-open');
document.querySelector('.modal-backdrop').remove();

// If there are errors update the Modal with validation errors and then open it
<% if @item.errors.any? %>
  $('#ModalItemNew').replaceWith("<%= j render "admin/items/form", item: @item %>");

  document.querySelector("[data-target='#ModalItemNew']").click();

// Otherwise clean the Modal and then append the new Item row to the list
<% else %>
  $('#ModalItemNew').replaceWith("<%= j render "admin/items/form", item: Item.new %>");

  $('tbody').append("<%= j render "admin/items/item", item: @item %>");
<% end %>
