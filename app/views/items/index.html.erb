<div class="container-cards">
  <div class="cards">
    <% @items.each do |item| %>
      <div class="card" data-aos="fade-zoom-in" data-aos-duration="500" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/400x400); min-height: 200px; min-width: 200px">
        <%= link_to item.name, categories_path %>
        <p><%= item.description %></p>
        <p><%= item.price %></p>
      </div>
    <% end %>
  </div>
</div>
