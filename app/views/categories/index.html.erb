<div class="banner" style="background-image: url('<%= image_path 'banner-image.jpg' %>');">
  <div class="container">
    <h1 style="margin-bottom: 10px">Find the most beautiful crafts around the world!</h1>
    <%= link_to "Sign up", "#", class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <h3 style="margin-top: 20px"><%= category.name %></h3>

    <div class="bd-example" style="width: 400px; heigth: 400px">
      <div id="carouselExampleCaptions<%= category.id %>" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions<%= category.id %>" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions<%= category.id %>" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions<%= category.id %>" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
          <% category.top_three_items.each do |item| %>
            <div class="carousel-item <%= "active" if item == category.top_three_items[0] %>" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/400x400); width: 400px; height: 400px">
              <%= link_to '#' do %>
                  <div class="carousel-caption d-md-block" style="display: flex; height: 100%; flex-direction: column; justify-content: flex-end">
                    <h5><%= item.name %></h5>
                    <p><%= item.description %></p>
                    <p><%= '%.2f' % item.price %>â‚¬</p>
                  </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleCaptions<%= category.id %>" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleCaptions<%= category.id %>" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  <% end %>
</div>
