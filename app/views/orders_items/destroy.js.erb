// Refresh the 'shopping cart' list
document.querySelector("#shopping-cart ul.orders-items-list").innerHTML = "<%= j render partial: "orders_items/orders-items-list-editable" %>";

// Refresh the checkout information
var checkoutInfo = "Subtotal (<%= "#{current_user.pending_order.num_items} #{current_user.pending_order.num_items == 1 ? "item" : "items"}" %>): <%= humanized_money_with_symbol(current_user.pending_order.subtotal) %>"
document.querySelector(".order-checkout p").innerHTML = checkoutInfo;

// Update the number of orders in the cart
document.querySelector('#cart-size a').innerHTML = "Cart <%= "(#{current_user.pending_order.num_items})" unless current_user.pending_order.num_items.zero? %>";

// To submit the OrdersItems#update form automatically
autoSubmitForm('.edit_orders_item', 'input.numeric');
