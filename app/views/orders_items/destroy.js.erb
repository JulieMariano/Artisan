// Refresh the 'shopping cart' list
document.querySelector("#shopping-cart ul.orders-items-list").innerHTML = "<%= j render partial: "orders_items/orders-items-list" %>";

// Refresh the checkout information
var checkoutInfo = "<%= @order.subtotal_num_items_string %> <%= humanized_money_with_symbol(@order.subtotal) %>"
document.querySelector(".order-checkout p").innerHTML = checkoutInfo;

// Update the number of orders in the cart
document.querySelector('#cart-size a').innerHTML = "Cart <%= "(#{@order.num_items})" unless @order.num_items.zero? %>";

// To submit the OrdersItems#update form automatically
autoSubmitForm('.edit_orders_item', 'input.numeric');
