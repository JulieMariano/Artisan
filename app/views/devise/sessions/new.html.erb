<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2 style="margin-top: 20px">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "email",
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div style="margin-bottom: 20px" class="form-actions btn btn-flat">
          <%= f.button :submit, "Log in", class: "btn btn-ghost" %>
        </div>
      <% end %>

      <div style="margin-bottom: 20px"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>


